<!DOCTYPE html>
<html>
  <head>
    <title>Elm Rails Actioncable Example</title>

    <%= action_cable_meta_tag %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div>
      <%= yield %>
    </div>

    <%= javascript_include_tag('application') %>
    <% if Rails.env.production? %>
      <%= javascript_include_tag('app-static') %>
    <% else %>
      <%= javascript_include_tag('http://localhost:3500/app-bundle.js') %>
    <% end %>
  </body>
</html>
